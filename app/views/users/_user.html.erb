<style>
  #user-info-table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  #user-info-table th,
  #user-info-table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: left;
  }

  #user-info-table th {
    background-color: #f8f8f8;
  }

  #user-info strong {
    color: #333;
  }
</style>

<div id="<%= dom_id user %>" class="user-info-container">
  <table id="user-info-table">
    <tr>
      <th>Field</th>
      <th>Value</th>
    </tr>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td><strong>Position:</strong></td>
      <td><%= user.position %></td>
    </tr>
  </table>
</div>
